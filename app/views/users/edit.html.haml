#block-forms.block
  .content
    %h2 Modifier mon profil

    .inner
      .flash
        = error_messages_for @user

      = form_for(@user, :action => url(:user, @user), :class => 'form') do
        .group
          %label.label{:for => 'user[email]'} Email
          = text_field :email, :class => 'text_field'
        .group
          %label.label{:for => 'user[password]'} Mot de Passe
          = password_field :password, :class => 'text_field'
        .group
          %label.label{:for => 'user[password_confirmation]'} Confirmation du mot de passe
          = password_field :password_confirmation, :class => 'text_field'
        %div{:class => 'group navform'}
          = submit "Update", :class => 'button'
