#block-tables.block

  .content
    .inner
      %table.table
        %thead
          %tr
            %th Ortho-partageur
            %th nom du document
            %th.last Lien de téléchargement
        %tbody
          - @materiels.each do |materiel|
            %tr{:class => "#{cycle('odd','even')} materiel" }
              %td= materiel.from.login
              %td= materiel.name
              %td= link_to('Télécharger', materiel.doc.url)

      = will_paginate @materiels

      .actions-bar
        .actions
          = link_to 'Ajouter un document', resource(:materiels, :new)

