!!! Strict
%html
  %head
    %title= title_header
    = css_include_tag 'base'
    = css_include_tag 'default'
  %body
    #container
      #header
        %h1= link_to 'Ortho-partage', '/'
        #user-navigation
          %ul
            - unless authenticated?
              %li= link_to('Login', url(:login))
              %li= link_to("S'enregistrer", url(:new_user))
            - else
              %li= link_to('Mon profil', url(:edit_user, session.user))
              %li= link_to 'DÃ©connection', url(:logout)
          .clear
        #main-navigation
          %ul
            %li.first{:class => 'current'}= link_to 'Materiels', resource(:materiels, :materiels)
            %li{:class => ''}= link_to 'Tests', resource(:materiels, :tests)
            %li.last{:class => ''}= link_to 'Documentations', resource(:materiels, :documentations)
          .clear

        - if message[:notice]
          .notice
            %p.notice{:class => 'flash'}= message[:notice]
    #wrapper
      #main
        .block
          = catch_content :for_layout
        #footer
          .block
            %p
              Version 0.1.0
        .clear
      .clear
